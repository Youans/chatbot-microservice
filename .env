# Global defaults for docker-compose. Override as needed.

# Chatbot service config
APP_PERSISTENCE=dynamodb            # memory | dynamodb
APP_LLM_PROVIDER=openai           # dummy | openai | bedrock
APP_LLM_MODEL=gpt-4o-mini         # e.g., gpt-4o-mini when using OpenAI
OPENAI_API_KEY={OPEN_AI_API_KEY}
# AWS/DynamoDB (used if APP_PERSISTENCE=dynamodb)
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
DYNAMODB_ENDPOINT=http://dynamodb-local:8000

# Gateway config
CHATBOT_BASE_URL=http://chatbot:8080
GATEWAY_JWT_SECRET=dev-secret-32-bytes-minimum-1234567890
GATEWAY_JWT_ISSUER=http://pidima.local
GATEWAY_JWT_AUDIENCE=chatbot

# Rate limiting (gateway)
RATE_LIMIT_REPLENISH_RATE=10
RATE_LIMIT_BURST_CAPACITY=20

# Redis for rate limiting
REDIS_HOST=redis
REDIS_PORT=6379
